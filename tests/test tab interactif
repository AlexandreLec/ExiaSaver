#include <stdio.h>
#include <stdlib.h>

int main ()
{


        int a, b;
        char tab[10] = {0};
        tab[9] = 1;

        for(a=0; a<10; a++)
        {
                printf("%d ",tab[a]);
        }
        printf("\n");


        while (1)
        {
                int w;
                int direction;
                printf("taper 6  pour aller a droite, 4 pour aller a gauche");
                scanf("%d", &direction);


                switch(direction)
                {
                case 4: //gauche

                        for(w=0; w<10; w++)
                        {
                                if (tab[w] == 1 && w != 0)
                                {
                                        tab[w] = 0;
                                        tab[w-1] = 1;
                                }

                                else if(tab[w] == 1 && w == 0)
                                {
                                        tab[w] = 0;
                                        tab[9] = 1;
                                        break;
                                }
                        }
                        break; //case 1


                case 6: //droite

                        for(w=0; w<10; w++)
                        {
                                 if (tab[w] == 1 && w != 9)
                                {
                                        tab[w] = 0;
                                        tab[w+1] = 1; //probleme avec le tab[w+1] car a l'ititeration il va lire 1 et donc le mettre a 0
                                        w = w+2;
                                }

                                else if(tab[w] == 1 && w == 9)
                                {
                                        tab[w] = 0;
                                        tab[0] = 1;
                                        break;
                                }

                        }
                        break; //case 2


                default:
                        printf("erreur \n");
                        break;
                } //switch




        for(a=0; a<10; a++)
          {
                printf("%d ",tab[a]);
        }
        printf("\n");





        }//while
}
